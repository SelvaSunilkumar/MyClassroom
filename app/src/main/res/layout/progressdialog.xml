<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loadingscreen"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lazyloader_animDur="800"
        app:lazyloader_dotsDist="10dp"
        app:lazyloader_dotsRadius="8dp"
        app:lazyloader_firstDelayDur="150"
        app:lazyloader_firstDotColor="@color/orange"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="350"
        app:lazyloader_secondDotColor="@color/yellow"
        app:lazyloader_thirdDotColor="@color/darkyellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validating User"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>

</LinearLayout>